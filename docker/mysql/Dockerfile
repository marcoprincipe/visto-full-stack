##########################################################################################
# Inicia a cração da imagem
##########################################################################################

FROM mysql:latest

##########################################################################################
# Expõe a porta de acesso 3306
##########################################################################################

EXPOSE 3306:3306

##########################################################################################
# Define a senha do usuário root
##########################################################################################

ENV MYSQL_ROOT_PASSWORD=M@pg2E07

##########################################################################################
# efetua a cópia dos scripts de criação do banco de dados
##########################################################################################

COPY create-database.sql /tmp
COPY create-tables.sql /tmp
COPY init-database.sh /tmp

##########################################################################################
# Inicia a execução do banco de dados
##########################################################################################

ENTRYPOINT ["/tmp/init-database.sh"]
